@page
@model Jijie_Valentin_ProiectF1.Pages.Races.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Race"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Race.ID" />
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Race.RaceName" class="control-label"></label>
                <input asp-for="Race.RaceName" class="form-control" aria-required="true"/>
                <span asp-validation-for="Race.RaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race.RaceDate" class="control-label"></label>
                <input asp-for="Race.RaceDate" class="form-control" />
                <span asp-validation-for="Race.RaceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Race.SeasonID" class="control-label"></label>
                <select asp-for="Race.SeasonID" class="form-control" asp-items="ViewBag.SeasonID" aria-required="true"></select>
                <span asp-validation-for="Race.SeasonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
