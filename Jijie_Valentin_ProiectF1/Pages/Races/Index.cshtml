@page
@model Jijie_Valentin_ProiectF1.Pages.Races.IndexModel
@using Jijie_Valentin_ProiectF1
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = "Index";
}
<h1>@Localizer["Races"]</h1>
<p>
    <a asp-page="Create">@Localizer["Create new"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Race[0].RaceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race[0].RaceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Race[0].Season)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Race) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season.SeasonYear)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">@Localizer["Edit"]</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">@Localizer["Details"]</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
