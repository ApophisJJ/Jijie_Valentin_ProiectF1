@using Jijie_Valentin_ProiectF1
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<SharedResource> Localizer
@using System.Globalization
@{
    var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jijie_Valentin_ProiectF1</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Jijie_Valentin_ProiectF1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <form asp-page="/SetLanguage" method="get">

                    @{
                        var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
                    }

                    <select name="culture"
                            onchange="this.form.submit()"
                            class="form-select">

                        <option value="en" selected="@(culture == "en")">English</option>
                        <option value="ro" selected="@(culture == "ro")">Română</option>

                    </select>

                    <input type="hidden"
                           name="returnUrl"
                           value="@($"{Context.Request.Path}{Context.Request.QueryString}")" />

                </form>
                <a class="navbar-brand" asp-area="" asp-page="/Index">Formula 1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Seasons/Index">@Localizer["Seasons"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Teams/Index">@Localizer["Teams"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Drivers/Index">@Localizer["Drivers"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Races/Index">@Localizer["Races"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Results/Index">@Localizer["Results"]</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Jijie_Valentin_ProiectF1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
