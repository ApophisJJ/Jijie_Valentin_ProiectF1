@page
@model Jijie_Valentin_ProiectF1.Pages.Results.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Sure"]</h3>
<div>
    <h4>@Localizer["Result"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Result.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Result.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Result.Points)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Result.Points)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Result.Driver)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Result.Driver.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Result.Race)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Result.Race.RaceName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Result.ID" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@Localizer["Back"]</a>
    </form>
</div>
