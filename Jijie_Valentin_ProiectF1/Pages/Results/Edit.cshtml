@page
@model Jijie_Valentin_ProiectF1.Pages.Results.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Result</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Result.ID" />
            <div class="form-group">
                <label asp-for="Result.Position" class="control-label"></label>
                <input asp-for="Result.Position" class="form-control" />
                <span asp-validation-for="Result.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.Points" class="control-label"></label>
                <input asp-for="Result.Points" class="form-control" />
                <span asp-validation-for="Result.Points" class="text-danger"></span>
            </div>
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Result.DriverID" class="control-label"></label>
                <select asp-for="Result.DriverID" class="form-control" asp-items="ViewBag.DriverID" aria-required="true"></select>
                <span asp-validation-for="Result.DriverID" class="text-danger"></span>
            </div>
            <div class="form-group">
<span class="text-danger">*</span>
                <label asp-for="Result.RaceID" class="control-label"></label>
                <select asp-for="Result.RaceID" class="form-control" asp-items="ViewBag.RaceID" aria-required="true"></select>
                <span asp-validation-for="Result.RaceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
