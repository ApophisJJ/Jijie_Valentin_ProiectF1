@model Jijie_Valentin_ProiectF1.Pages.Results.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Race)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Result) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race.RaceName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
