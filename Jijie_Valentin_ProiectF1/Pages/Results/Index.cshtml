@page
@model Jijie_Valentin_ProiectF1.Pages.Results.IndexModel
@using Jijie_Valentin_ProiectF1
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = "Index";
}
<h1>@Localizer["Results"]</h1>
<p>
    <a asp-page="Create">@Localizer["Create new"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result[0].Race)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Result) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Race.RaceName)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">@Localizer["Edit"]</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">@Localizer["Details"]</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">@Localizer["Delete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
