@page
@model Jijie_Valentin_ProiectF1.Pages.Drivers.DeleteModel
@using Jijie_Valentin_ProiectF1
@inject Microsoft.AspNetCore.Mvc.Localization.IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = "Delete";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Sure"]</h3>
<div>
    <h4>@Localizer["Driver"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Driver.Team)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Driver.Team.TeamName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Driver.ID" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@Localizer["Back"]</a>
    </form>
</div>
